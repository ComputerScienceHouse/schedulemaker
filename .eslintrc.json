{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "standard"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "no-undef": "off",
        "no-unused-vars": "warn",
        "no-prototype-builtins": "warn",
        "no-redeclare": "warn",
        "no-inner-declarations": "warn",
        "no-throw-literal": "warn"
    }
}
